@model CinemaDomain.Model.Session

@{
    ViewData["Title"] = "Details";
}

<h1>Детально</h1>

<div>
    <h4>сеанс</h4>
    <hr />
    <dl class="row">
        <div class="mb-4 text-left">
            <img src="@Url.Content(Model.Film.PosterPath)" alt="@Model.Film.Name" class="img-fluid rounded" style="max-height: 300px;" />
        </div>
        <dt class="col-sm-2">Фільм</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Film.Name)
        </dd>
        <dt class="col-sm-2">Зал</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Hall.Name)
        </dd>
        <dt class = "col-sm-2">Дата сеансу</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SessionTime)
        </dd>
        <dt class = "col-sm-2">Тривалість</dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Duration)
        </dd>
    </dl>
</div>
<div>
    @if(User.IsInRole("superadmin"))
    {
        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@Model.Id">Редагувати</a>
    }
    <a asp-action="Index">Назад</a>
</div>
