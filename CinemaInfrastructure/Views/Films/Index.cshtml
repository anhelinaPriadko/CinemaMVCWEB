@model IEnumerable<CinemaDomain.Model.Film>

@{
    ViewData["Title"] = "Фільми";
}

@if (TempData["Message"] != null)
{
    <div class="alert alert-info">@TempData["Message"]</div>
}

<h1>Фільми</h1>

@if (User.IsInRole("superadmin"))
{
    <div class="mb-4 d-flex gap-2">
        <a class="btn btn-primary" asp-action="Create">Створити новий</a>
        <a class="btn btn-secondary" asp-controller="Films" asp-action="Import">Імпорт фільмів</a>
        <a class="btn btn-success" asp-controller="Films" asp-action="Export">Експорт фільмів</a>
    </div>
}

<div class="container movie-grid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="movie-col">
                <div class="movie-card card shadow-sm">
                    @if (!string.IsNullOrEmpty(item.PosterPath))
                    {
                        <img src="@Url.Content(item.PosterPath)" class="movie-poster" alt="@item.Name" />
                    }
                    else
                    {
                        <div class="movie-noimage">Немає зображення</div>
                    }

                    <div class="movie-card-body">
                        <h5 class="movie-title" title="@item.Name">@item.Name</h5>

                        <div class="movie-card-actions">
                            @if (User.IsInRole("superadmin"))
                            {
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Редагувати</a>
                            }

                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Деталі</a>

                            @if (User.Identity.IsAuthenticated)
                            {
                                <a asp-controller="Bookings" asp-action="Create" asp-route-FilmId="@item.Id" class="btn btn-primary btn-sm">Забронювати</a>
                            }
                            else
                            {
                                <a asp-controller="Account" asp-action="Login" class="btn btn-primary btn-sm">Забронювати</a>
                            }

                            @if (User.IsInRole("superadmin"))
                            {
                                <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete('@Url.Action("Delete", "Films", new { id = item.Id })', '@item.Name', 'фільм')">Видалити</button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>




@section Scripts {
    <script>
        function confirmDelete(url, name, entity) {
            if (confirm(`Ви впевнені, що хочете видалити ${entity} «${name}»?`)) {
                window.location.href = url;
            }
        }
    </script>
}
