@model CinemaInfrastructure.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Вхід";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-7 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body p-4">
                    <h2 class="h4 mb-3 text-center">Вхід в Кінотеатр</h2>

                    <partial name="_ValidationSummary" />

                    <form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" asp-antiforgery="true" novalidate>
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control @(ViewData.ModelState[nameof(Model.Email)]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="your@mail.com" />
                            <div class="invalid-feedback">
                                <span asp-validation-for="Email"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" type="password" class="form-control @(ViewData.ModelState[nameof(Model.Password)]?.Errors.Count > 0 ? "is-invalid" : "")" placeholder="Пароль" />
                            <div class="invalid-feedback">
                                <span asp-validation-for="Password"></span>
                            </div>
                        </div>

                        @* <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input asp-for="RememberMe" class="form-check-input" />
                                <label asp-for="RememberMe" class="form-check-label"></label>
                            </div>
                            <a asp-action="ForgotPassword" asp-controller="Account" class="small">Забули пароль?</a>
                        </div> *@

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Увійти</button>
                        </div>

                        <div class="text-center mt-3">
                            <span class="small text-muted">Ще не маєте акаунту?</span>
                            <a asp-action="Register" asp-controller="Account">Зареєструватися</a>
                        </div>
                    </form>
                </div> <!-- card-body -->
            </div> <!-- card -->
        </div> <!-- col -->
    </div> <!-- row -->
</div> <!-- container -->
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
